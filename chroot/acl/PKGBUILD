pkgname=chroot-acl
pkgver=2.2.53
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'riscv64' 'riscv32')
source=(http://download.savannah.gnu.org/releases/acl/acl-$pkgver.tar.gz)

build() {
	cd acl-$pkgver
	./configure \
		--prefix=/tools \
		--libdir=/tools/lib \
		--libexecdir=/tools/lib \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-nls
	make
}

package() {
	cd acl-$pkgver
	make DESTDIR=$pkgdir install
}
