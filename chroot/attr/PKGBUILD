pkgname=chroot-attr
pkgver=2.4.48
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
source=(http://download.savannah.gnu.org/releases/attr/attr-$pkgver.tar.gz)

build() {
	cd attr-$pkgver
	./configure \
		--prefix=/tools \
		--libdir=/tools/lib \
		--libexecdir=/tools/lib \
		--sysconfdir=/tools/etc \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-nls
	make
}

package() {
	cd attr-$pkgver
	make DESTDIR=$pkgdir install
}
