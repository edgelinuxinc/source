pkgname=chroot-curl
pkgver=7.62.0
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
source=(https://curl.haxx.se/download/curl-$pkgver.tar.xz)

build() {
	cd curl-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET \
		--with-ssl \
		--with-random=/dev/urandom \
		--enable-ipv6 \
		--enable-threaded-resolver \
		--disable-manual
	make
}

package() {
	cd curl-$pkgver
	make DESTDIR=$pkgdir install
}
