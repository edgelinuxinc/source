pkgname=chroot-fakeroot
pkgver=1.23
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm' 'riscv32' 'riscv64')
source=(http://ftp.debian.org/debian/pool/main/f/fakeroot/fakeroot_${pkgver}.orig.tar.xz)

prepare() {
	cd fakeroot-$pkgver
	./bootstrap
}

build() {
	cd fakeroot-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd fakeroot-$pkgver
	make DESTDIR=$pkgdir install
}
