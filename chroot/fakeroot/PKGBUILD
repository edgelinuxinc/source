pkgname=chroot-fakeroot
pkgver=1.23
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips' 'mipsel' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'or1k' 'hppa' 'riscv64' 'riscv32')
source=(http://ftp.debian.org/debian/pool/main/f/fakeroot/fakeroot_${pkgver}.orig.tar.xz)

prepare() {
	cd fakeroot-$pkgver
	./bootstrap
}

build() {
	cd fakeroot-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd fakeroot-$pkgver
	make DESTDIR=$pkgdir install
}
