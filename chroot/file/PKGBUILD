pkgname=chroot-file
pkgver=5.35
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'riscv64' 'riscv32')
source=(ftp://ftp.astron.com/pub/file/file-$pkgver.tar.gz)

build() {
	cd file-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd file-$pkgver
	make DESTDIR=$pkgdir install
}
