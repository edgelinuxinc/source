pkgname=chroot-file
pkgver=5.35
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm')
source=(ftp://ftp.astron.com/pub/file/file-$pkgver.tar.gz)

build() {
	cd file-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd file-$pkgver
	make DESTDIR=$pkgdir install
}
