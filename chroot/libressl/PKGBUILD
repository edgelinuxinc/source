pkgname=chroot-libressl
pkgver=2.8.2
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips' 'mipsel' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'or1k' 'hppa' 'riscv64' 'riscv32')
source=(https://cdn.openbsd.org/pub/OpenBSD/LibreSSL/libressl-$pkgver.tar.gz)

build() {
	cd libressl-$pkgver
	./configure \
		--prefix=/tools \
		--with-openssldir=/tools/etc/ssl \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd libressl-$pkgver
	make DESTDIR=$pkgdir install
}
