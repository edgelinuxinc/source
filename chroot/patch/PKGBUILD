pkgname=chroot-patch
pkgver=2.7.6
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
source=(http://ftpmirror.gnu.org/gnu/patch/patch-$pkgver.tar.xz)

build() {
	cd patch-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd patch-$pkgver
	make DESTDIR=$pkgdir install
}
