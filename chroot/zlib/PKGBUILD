pkgname=chroot-zlib
pkgver=1.2.11
pkgrel=1
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'riscv64' 'riscv32')
source=(https://zlib.net/zlib-$pkgver.tar.xz)

build() {
	cd zlib-$pkgver
	./configure \
		--prefix=/tools
	make
}

package() {
	cd zlib-$pkgver
	make DESTDIR=$pkgdir install
}
