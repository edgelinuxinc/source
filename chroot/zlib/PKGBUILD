pkgname=chroot-zlib
pkgver=1.2.11
pkgrel=1
arch=('x86_64' 'i586' 'aarch64')
source=(https://zlib.net/zlib-$pkgver.tar.xz)

build() {
	export CFLAGS="${CFLAGS/-Os/-O3}"
	export CXXFLAGS="${CXXFLAGS/-Os/-O3}"

	cd zlib-$pkgver
	./configure \
		--prefix=/tools
	make
}

package() {
	cd zlib-$pkgver
	make DESTDIR=$pkgdir install
}
