prepare() {
	cd $pkgname-${mainver}
	patch -p0 -i $srcdir/$pkgname${strippedver}-001
	patch -p0 -i $srcdir/$pkgname${strippedver}-002
	patch -p0 -i $srcdir/$pkgname${strippedver}-003
	patch -p0 -i $srcdir/$pkgname${strippedver}-004
	patch -p0 -i $srcdir/$pkgname${strippedver}-005
	patch -p0 -i $srcdir/$pkgname${strippedver}-006
	patch -p0 -i $srcdir/$pkgname${strippedver}-007
	patch -p0 -i $srcdir/$pkgname${strippedver}-008
	patch -p0 -i $srcdir/$pkgname${strippedver}-009
	patch -p0 -i $srcdir/$pkgname${strippedver}-010
	patch -p0 -i $srcdir/$pkgname${strippedver}-011
	patch -p0 -i $srcdir/$pkgname${strippedver}-012
	patch -p0 -i $srcdir/$pkgname${strippedver}-013
	patch -p0 -i $srcdir/$pkgname${strippedver}-014
	patch -p0 -i $srcdir/$pkgname${strippedver}-015
	patch -p0 -i $srcdir/$pkgname${strippedver}-016
	patch -p0 -i $srcdir/$pkgname${strippedver}-017
	patch -p0 -i $srcdir/$pkgname${strippedver}-018
	patch -p0 -i $srcdir/$pkgname${strippedver}-019
	patch -p0 -i $srcdir/$pkgname${strippedver}-020
	patch -p0 -i $srcdir/$pkgname${strippedver}-021
	patch -p0 -i $srcdir/$pkgname${strippedver}-022
	patch -p0 -i $srcdir/$pkgname${strippedver}-023
}

build() {
	cd $pkgname-${mainver}
	bashconfig=(-DDEFAULT_PATH_VALUE=\'\"/usr/local/sbin:/usr/local/bin:/usr/bin\"\'
		-DSTANDARD_UTILS_PATH=\'\"/usr/bin\"\'
		-DSYS_BASHRC=\'\"/etc/bash.bashrc\"\'
		-DSYS_BASH_LOGOUT=\'\"/etc/bash.bash_logout\"\'
		-DNON_INTERACTIVE_LOGIN_SHELLS)
	export CFLAGS="${CFLAGS} ${bashconfig[@]}"

	./configure \
		--prefix=/usr \
		--with-installed-readline \
		--without-bash-malloc \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-${mainver}
	make DESTDIR=$pkgdir install

	ln -sf bash $pkgdir/usr/bin/rbash
	ln -sf bash $pkgdir/usr/bin/sh

	install -Dm644 $srcdir/system.bashrc $pkgdir/etc/bash.bashrc
	install -Dm644 $srcdir/system.bash_logout $pkgdir/etc/bash.bash_logout

	install -dm755 $pkgdir/etc/skel/
	install -m644 $srcdir/dot.bashrc $pkgdir/etc/skel/.bashrc
	install -m644 $srcdir/dot.bash_profile $pkgdir/etc/skel/.bash_profile
	install -m644 $srcdir/dot.bash_logout $pkgdir/etc/skel/.bash_logout
}
