pkgname=bash
mainver=4.4
pkgver=${mainver}.023
strippedver="$(echo ${mainver} | tr -d '.')"
pkgrel=1
pkgdesc="The GNU Bourne Again shell"
arch=('x86_64' 'aarch64')
url="http://www.gnu.org/software/bash"
license=('GPL')
depends=('glibc' 'ncurses' 'readline')
