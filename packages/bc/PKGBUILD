# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=bc
pkgver=1.07.1
pkgrel=1
pkgdesc="An arbitrary precision calculator language"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips' 'mipsel' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'or1k' 'hppa' 'riscv64' 'riscv32')
url="http://www.gnu.org/software/bc"
license=('GPL')
depends=('glibc' 'readline')
source=("http://ftpmirror.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('cda93857418655ea43590736fc3ca9fc')

prepare() {
	cd $pkgname-$pkgver
cat > bc/fix-libmath_h << "EOF"
#!/usr/bin/bash
	sed -e '1   s/^/{"/' \
	-e     's/$/",/' \
	-e '2,$ s/^/"/' \
	-e   '$ d' \
	-i libmath.h

sed -e '$ s/$/0}/' \
	-i libmath.h
EOF
}

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--with-readline \
		--build=$CHOST
	make MAKEINFO="true"
}

package() {
	cd $pkgname-$pkgver
	make MAKEINFO="true" DESTDIR=$pkgdir install
}
