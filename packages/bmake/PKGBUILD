# Contributor: protonesso <nagakamira@gmail.com>

pkgname=bmake
pkgver=20180919
pkgrel=1
pkgdesc="Portable version of the NetBSD make build tool"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="http://www.crufty.net/help/sjg/bmake.html"
license=('BSD')
depends=('python')
source=("http://www.crufty.net/ftp/pub/sjg/$pkgname-$pkgver.tar.gz")
md5sums=('d0a3c01b803d4ff51124d2ef455eeb2b')

build() {
	cd $pkgname
	./boot-strap --prefix=/usr op=build
}

package() {
	cd $pkgname
	install -d $pkgdir/usr/bin

	./boot-strap --install-destdir=$pkgdir --prefix=/usr op=install
}
