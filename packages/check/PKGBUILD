# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=check
pkgver=0.12.0
pkgrel=1
pkgdesc="A unit testing framework for C"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="https://libcheck.github.io/check/"
license=('LGPL')
depends=('glibc' 'gawk')
source=("https://github.com/libcheck/check/releases/download/$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('31b17c6075820a434119592941186f70')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
	sed -i '1 s/tools/usr/' $pkgdir/usr/bin/checkmk
}
