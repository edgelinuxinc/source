# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=cracklib
pkgver=2.9.6
pkgrel=3
pkgdesc="Password Checking Library"
arch=('x86_64' 'aarch64')
url="https://github.com/cracklib/cracklib"
license=('GPL')
depends=('glibc' 'zlib')
source=("https://github.com/cracklib/cracklib/releases/download/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('c52f463585d85924b28cdc1e373ae06d')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--with-default-dict=/usr/share/cracklib/pw_dict \
		--without-python \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install

	chmod 755 util/cracklib-format util/cracklib-packer

	mkdir -p $pkgdir/usr/lib/cracklib/

	util/cracklib-format dicts/cracklib-small | util/cracklib-packer $pkgdir/usr/share/cracklib/pw_dict

	gzip -9 $pkgdir/usr/share/cracklib/pw_dict.pwd

	rm $pkgdir/usr/share/cracklib/cracklib-small
	rm $pkgdir/usr/share/cracklib/cracklib.magic
}
