# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=dconf
pkgver=0.30.1
pkgrel=2
pkgdesc="Configuration database system"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="https://wiki.gnome.org/Projects/dconf"
license=('LGPL')
depends=('glib' 'libxslt')
makedepends=('vala' 'dbus' 'python' 'meson' 'bash-completion')
source=("http://ftp.gnome.org/pub/gnome/sources/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz")
md5sums=('a959eef51c917b3c57cfbef1448a375e')

prepare() {
	cd $pkgname-$pkgver
	mkdir build
}

build() {
	cd $pkgname-$pkgver
	cd build

	meson $srcdir/$pkgname-$pkgver \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sysconfdir=/etc \
		--buildtype release \
		--auto-features enabled \
		--wrap-mode nofallback \
		-D b_lto=true
	ninja
}

package() {
	cd $pkgname-$pkgver
	cd build

	DESTDIR=$pkgdir ninja install
}
