# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=fakeroot
pkgver=1.23
pkgrel=1
pkgdesc="Tool for simulating superuser privileges"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="http://packages.debian.org/fakeroot"
license=('GPL')
depends=('glibc' 'm4')
source=("http://ftp.debian.org/debian/pool/main/f/fakeroot/fakeroot_${pkgver}.orig.tar.xz")
md5sums=('b82c5e99b6365a838e73d05718083f6a')

prepare() {
	cd $pkgname-$pkgver
	./bootstrap
}

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/libfakeroot \
		--with-ipc=sysv \
		--disable-static \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
