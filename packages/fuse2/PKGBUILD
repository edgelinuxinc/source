# Contributor: protonesso <nagakamira@gmail.com>

pkgname=fuse2
pkgver=2.9.8
pkgrel=1
pkgdesc="A library that makes it possible to implement a filesystem in a userspace program"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="https://github.com/libfuse/libfuse"
license=('GPL')
depends=('glibc')
options=(!emptydirs)
source=("https://github.com/libfuse/libfuse/releases/download/fuse-$pkgver/fuse-$pkgver.tar.gz")
md5sums=('f365e848a82504edb0b7a33df790ca78')

build() {
	cd fuse-$pkgver
	export MOUNT_FUSE_PATH=/usr/bin

	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--enable-lib \
		--enable-util \
		--disable-example \
		--build=$CHOST
	make
}

package() {
	cd fuse-$pkgver
	make DESTDIR=${pkgdir} install

	rm -rf $pkgdir/etc/init.d
	rm -rf $pkgdir/etc/udev
	rm -rf $pkgdir/dev
}
