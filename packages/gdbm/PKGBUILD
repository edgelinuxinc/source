# Contributor: protonesso <nagakamira@gmail.com>

pkgname=gdbm
pkgver=1.18.1
pkgrel=1
pkgdesc="The GNU database library"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="http://www.gnu.org/software/gdbm"
license=('GPL')
depends=('glibc')
source=("http://ftpmirror.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('988dc82182121c7570e0cb8b4fcd5415')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--enable-libgdbm-compat \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
