# Contributor: protonesso <nagakamira@gmail.com>

pkgname=gnupg
pkgver=2.2.10
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
arch=('x86_64' 'aarch64')
url="https://www.gnupg.org/"
license=('GPL')
depends=('glibc' 'bzip2' 'readline' 'sqlite' 
	'libgpg-error' 'libgcrypt' 'libassuan' 'libksba' 'npth' 'pinentry')
source=("https://www.gnupg.org/ftp/gcrypt/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=('3ae8bd6246367602e72571f7a6588bcd')

prepare() {
	cd $pkgname-$pkgver
	sed -e '/noinst_SCRIPTS = gpg-zip/c sbin_SCRIPTS += gpg-zip' -i tools/Makefile.in
}

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/gnupg \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--enable-g13 \
		--enable-symcryptrun \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install

	cd doc/examples/systemd-user
	for i in *.*; do
		install -Dm644 $i $pkgdir/usr/lib/systemd/user/$i
	done
}
