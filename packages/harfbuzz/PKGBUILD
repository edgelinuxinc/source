# Contributor: protonesso <nagakamira@gmail.com>

pkgname=harfbuzz
pkgver=2.1.1
pkgrel=1
pkgdesc="OpenType text shaping engine"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips' 'mipsel' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'or1k' 'hppa' 'riscv64' 'riscv32')
url="http://www.freedesktop.org/wiki/Software/HarfBuzz"
license=('MIT')
depends=('glibc' 'icu' 'freetype' 'glib')
makedepends=('gobject-introspection')
source=("https://www.freedesktop.org/software/$pkgname/release/$pkgname-$pkgver.tar.bz2")
md5sums=('246535f1ba011235650b3da8fcca2456')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--with-freetype \
		--with-glib \
		--with-gobject \
		--with-icu \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
