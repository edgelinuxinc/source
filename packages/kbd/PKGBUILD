# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=kbd
pkgver=2.0.4
pkgrel=2
pkgdesc="Keytable files and keyboard utilities"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="http://www.kbd-project.org"
license=('GPL')
depends=('glibc')
source=("https://www.kernel.org/pub/linux/utils/$pkgname/$pkgname-$pkgver.tar.xz")
md5sums=('c1635a5a83b63aca7f97a3eab39ebaa6')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--disable-vlock \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
