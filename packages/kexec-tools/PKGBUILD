# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=kexec-tools
pkgver=2.0.17
pkgrel=1
pkgdesc="Load another kernel from the currently executing Linux kernel"
arch=('x86_64' 'i586' 'aarch64' 'arm')
url="http://kernel.org/pub/linux/utils/kernel/kexec/"
license=('GPL')
depends=('glibc' 'zlib' 'gawk' 'xz-utils')
source=("https://git.kernel.org/pub/scm/utils/kernel/kexec/kexec-tools.git/snapshot/$pkgname-$pkgver.tar.gz")
md5sums=('53667de642447d53d766dc088e4245a7')

prepare() {
	cd $pkgname-$pkgver
	./bootstrap
}

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--without-lzma \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
