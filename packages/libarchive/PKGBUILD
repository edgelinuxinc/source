# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=libarchive
pkgver=3.3.3
pkgrel=1
pkgdesc="Multi-format archive and compression library"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="http://libarchive.org/"
license=('BSD')
depends=('glibc' 'zlib' 'acl' 'bzip2' 'libressl' 'xz-utils' 'expat' 'lz4' 'zstd')
source=("http://www.libarchive.org/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('4038e366ca5b659dae3efcc744e72120')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--without-nettle \
		--without-xml2 \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
