# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=libksba
pkgver=1.3.5
pkgrel=1
pkgdesc="A CMS and X.509 access library"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="https://www.gnupg.org/related_software/libksba/index.html"
license=('GPL')
depends=('glibc' 'libgpg-error')
source=("https://www.gnupg.org/ftp/gcrypt/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=('8302a3e263a7c630aa7dea7d341f07a2')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
