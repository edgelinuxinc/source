		 'pam' 'acl' 'attr' 'libcap' 'sed' 'ncurses' 'coreutils' 'dash' 'bash' 'iproute2' 'bzip2'
		 'debianutils' 'diffutils' 'file' 'mawk' 'findutils' 'grep' 'less' 'gzip' 'iputils' 'net-tools'
		 'inetutils' 'kbd' 'xz-utils' 'psmisc' 'lvm2' 'cryptsetup' 'mdadm' 'systemd'
		 'shadow' 'util-linux' 'procps-ng' 'htop' 'psmisc' 'tar' 'nano' 'dracut' 'linux'
		 'sysfsutils' 'dosfstools' 'btrfs-progs' 'pciutils' 'usbutils' 'pacman')
	:
}

