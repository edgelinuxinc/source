# Contributor: protonesso <nagakamira@gmail.com>

pkgname=nano
pkgver=3.2
pkgrel=1
pkgdesc="Pico editor clone with enhancements"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="http://www.nano-editor.org/"
license=('GPL')
depends=('glibc' 'ncurses' 'file')
source=("https://www.nano-editor.org/dist/v3/${pkgname}-${pkgver}.tar.xz")
md5sums=('2606dc0dc31a088f16c7d603b42d23d0')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-color \
		--enable-utf8 \
		--enable-multibuffer \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
