# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=numactl
pkgver=2.0.12
pkgrel=1
pkgdesc="Simple NUMA policy support"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips' 'mipsel' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'or1k' 'hppa' 'riscv64' 'riscv32')
url="http://oss.sgi.com/projects/libnuma/"
license=('GPL' 'LGPL')
depends=('perl')
source=("https://github.com/numactl/numactl/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('2ba9777d78bfd7d408a387e53bc33ebc')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
