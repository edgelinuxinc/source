# Contributor: protonesso <nagakamira@gmail.com>

pkgname=pacman-contrib
pkgver=1.1.0
pkgrel=1
pkgdesc="Contributed scripts and tools for pacman systems"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="https://git.archlinux.org/pacman-contrib.git/about/"
license=('GPL')
depends=('fakeroot' 'pacman')
source=("https://sources.archlinux.org/other/community/pacman-contrib/pacman-contrib-$pkgver.tar.gz")
md5sums=('dde4c6c2d30bcb7273b495be1b5df4d0')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
