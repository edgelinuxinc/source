# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=perl-xml-parser
pkgver=2.44
pkgrel=1
pkgdesc="Expat-based XML parser module for perl"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips' 'mipsel' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'or1k' 'hppa' 'riscv64' 'riscv32')
url="http://search.cpan.org/dist/XML-Parser/"
license=('GPL' 'PerlArtistic')
depends=('glibc' 'perl' 'expat')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/T/TO/TODDR/XML-Parser-${pkgver}.tar.gz")
md5sums=('af4813fe3952362451201ced6fbce379')

build() {
	export CFLAGS="${CFLAGS/-O3/-Os}"
	export CXXFLAGS="${CXXFLAGS/-O3/-Os}"

	cd XML-Parser-${pkgver}
	perl Makefile.PL
	make
}

package() {
	export CFLAGS="${CFLAGS/-O3/-Os}"
	export CXXFLAGS="${CXXFLAGS/-O3/-Os}"

	cd XML-Parser-${pkgver}
	make DESTDIR=$pkgdir install
}
