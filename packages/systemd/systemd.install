sd_booted() {
	[[ -d run/systemd/system && ! -L run/systemd/system ]]
}

post_common() {
	udevadm hwdb --update
	journalctl --update-catalog
}

post_install() {
	systemd-machine-id-setup

	post_common

	mkdir -m2755 var/log/journal/remote
	chgrp systemd-journal-remote var/log/journal/remote
}

post_upgrade() {
	post_common
}
