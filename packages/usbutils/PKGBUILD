# Contributor: protonesso <nagakamira@gmail.com>

pkgname=usbutils
pkgver=010
pkgrel=1
pkgdesc="USB Device Utilities"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips' 'mipsel' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'or1k' 'hppa' 'riscv64' 'riscv32')
url="http://linux-usb.sourceforge.net/"
license=('GPL')
depends=('glibc' 'libusb' 'hwids')
optdepends=('python: for lsusb.py usage')
source=("http://www.kernel.org/pub/linux/utils/usb/usbutils/${pkgname}-${pkgver}.tar.xz")
md5sums=('938e3707593974be99a0dd6d1de76671')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--datadir=/usr/share/hwdata \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install

	rm -rf $pkgdir/usr/{share/hwdata,sbin}
}
