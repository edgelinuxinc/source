# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=whois
pkgver=5.4.0
pkgrel=1
pkgdesc="Intelligent WHOIS client"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="https://github.com/rfc1036/whois"
license=('GPL')
depends=('glibc' 'libidn2')
makedepends=('perl')
backup=('etc/whois.conf')
source=("https://github.com/rfc1036/whois/archive/v$pkgver.tar.gz")
md5sums=('9352e03ef686ec08259309230a3a65fc')

build() {
	cd $pkgname-$pkgver
	make \
		CONFIG_FILE=/etc/whois.conf \
		CFLAGS="$CFLAGS" \
		HAVE_ICONV=1
}

package() {
	cd $pkgname-$pkgver
	make prefix=/usr BASEDIR=$pkgdir install-whois
	install -D -m644 whois.conf $pkgdir/etc/whois.conf
}
