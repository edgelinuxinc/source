# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=xfsprogs
pkgver=4.19.0
pkgrel=2
pkgdesc="XFS filesystem utilities"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'riscv64' 'riscv32')
url="http://xfs.org/"
license=('LGPL')
depends=('glibc' 'util-linux-libs' 'readline')
source=("https://www.kernel.org/pub/linux/utils/fs/xfs/$pkgname/$pkgname-$pkgver.tar.xz")
md5sums=('90efd878b39b47a36a3771389590a667')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--enable-readline \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make -j1 DIST_ROOT=$pkgdir PKG_ROOT_SBIN_DIR=/usr/bin install install-dev

	chown -R root $pkgdir
	chgrp -R root $pkgdir

	mv $pkgdir/lib/libhandle.so* $pkgdir/usr/lib/
	rm -rf $pkgdir/lib
}
