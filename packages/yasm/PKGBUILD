# Maintainer: protonesso <nagakamira@gmail.com>
# Contributor: protonesso <nagakamira@gmail.com>

pkgname=yasm
pkgver=1.3.0
pkgrel=1
pkgdesc="A rewrite of NASM to allow for multiple syntax supported (NASM, TASM, GAS, etc.)"
arch=('x86_64' 'i586' 'aarch64' 'arm' 'mips64' 'mips' 'powerpc64le' 'powerpc64' 'powerpc' 'sparc64' 'sparc' 's390x' 'microblaze' 'riscv64' 'riscv32')
url="http://www.tortall.net/projects/yasm/"
license=('GPL' 'LGPL' 'BSD' 'PerlArtistic')
depends=('glibc')
options=('staticlibs')
source=("http://www.tortall.net/projects/$pkgname/releases/$pkgname-$pkgver.tar.gz")
md5sums=('fc9e586751ff789b34b1f21d572d96af')

build() {
	cd $pkgname-$pkgver
	./configure \
		--prefix=/usr \
		--build=$CHOST
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
